{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "e2e"]
}
